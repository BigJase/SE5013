<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TreeList">

    <ImageView
        android:id="@+id/itemPic1"
        android:layout_width="135dp"
        android:layout_height="134dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/itemName1"
        android:layout_marginEnd="13dp"
        android:maxHeight="80dp"
        android:maxWidth="80dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/itemName1"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="11dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Tree Name"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/itemPrice1"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/itemPic1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="71dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Tree Price" />

    <TextView
        android:id="@+id/itemDescription1"
        android:layout_width="151dp"
        android:layout_height="83dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/itemName1"
        android:layout_marginStart="13dp"
        android:fontFamily="sans-serif-condensed"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/itemPic1"
        android:layout_alignStart="@+id/itemName1"
        android:text="Price: "
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="295dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="161dp" />

</RelativeLayout>