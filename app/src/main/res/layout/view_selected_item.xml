<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout">


    <ImageView
        android:id="@+id/itemPic"
        android:layout_width="368dp"
        android:layout_height="164dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"

        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/itemName"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemPic"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="77dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="81dp"
        android:background="@android:color/black"
        android:text="Name..."
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/labelDesc"
        android:layout_width="108dp"
        android:layout_height="24dp"
        android:layout_below="@id/itemName"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="78dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="242dp"
        android:text="Description:" />


    <TextView
        android:id="@+id/labelPrice"
        android:layout_width="63dp"
        android:layout_height="31dp"
        android:layout_alignBottom="@id/itemDescription"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="98dp"
        android:text="Price:" />

    <TextView
        android:id="@+id/labelHeight"
        android:layout_width="63dp"
        android:layout_height="31dp"
        android:layout_alignRight="@+id/labelPrice"
        android:layout_alignBottom="@+id/itemDescription"
        android:layout_marginRight="149dp"
        android:layout_marginBottom="-44dp"
        android:text="Height:" />

    <TextView
        android:id="@+id/itemDescription"
        android:layout_width="200dp"
        android:layout_height="97dp"
        android:layout_below="@+id/labelDesc"
        android:layout_centerInParent="true"
        android:layout_marginTop="-239dp"
        app:layout_constraintTop_toBottomOf="@+id/labelDesc" />



    <TextView
        android:id="@+id/itemPrice"
        android:layout_width="63dp"
        android:layout_height="31dp"
        android:layout_alignTop="@+id/labelPrice"
        android:layout_alignRight="@+id/labelPrice"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        tools:text="$" />

    <Button
        android:id="@+id/add_cart_button"
        android:layout_width="127dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@id/labelHeight"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="16dp"
        android:text="Add to cart" />

    <TextView
        android:id="@+id/height"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_alignTop="@+id/labelPrice"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="133dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="100dp"
        android:layout_toStartOf="@+id/labelPrice" />

    <Button
        android:id="@+id/cart_button"
        android:layout_width="123dp"
        android:layout_height="44dp"
        android:layout_alignEnd="@+id/itemName"
        android:layout_alignBottom="@+id/add_cart_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="217dp"
        android:layout_marginTop="447dp"
        android:layout_marginEnd="-37dp"
        android:layout_marginBottom="4dp"
        android:text="Cartout" />

</RelativeLayout>